<group name="custom_rules_group">

  <!-- Unauthorized access detection from JSON logs -->
  <rule id="100100" level="10">
    <decoded_as>custom_json_decoder</decoded_as>
    <field name="event_type">unauthorized_access</field>
    <description>Unauthorized access detected in custom app log</description>
    <group>custom, access_attempt</group>
  </rule>

  <!-- SSH login from unknown IP -->
  <rule id="100101" level="7">
    <if_sid>5710</if_sid>
    <match>192.168.1.100</match>
    <description>SSH login attempt from unknown IP 192.168.1.100</description>
    <group>ssh,custom</group>
  </rule>

  <!-- Sudo command usage logging -->
  <rule id="100102" level="5">
    <program_name>sudo</program_name>
    <match>COMMAND=</match>
    <description>Sudo command executed</description>
    <group>sudo,custom</group>
  </rule>

</group>
